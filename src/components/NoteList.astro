---
interface NoteItem {
  title: string;
  slug: string;
  date?: string;
  excerpt?: string;
  folder?: string;
}

const { notes = [], title = 'Recent Notes' } = Astro.props as {
  notes: NoteItem[];
  title?: string;
};
---
<section class="surface-card">
  <div class="flex items-center justify-between gap-4">
    <h2 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100">{title}</h2>
    <a class="text-sm text-aurora-600 transition hover:text-aurora-500" href="/garden/">View all</a>
  </div>
  <ul class="mt-4 space-y-4">
    {notes.map((note) => (
      <li key={note.slug} class="group">
        <a
          href={`/garden/${note.slug}/`}
          class="flex flex-col rounded-2xl border border-transparent bg-white/50 p-4 transition hover:border-aurora-200 hover:bg-white/80 dark:bg-neutral-900/40 dark:hover:border-aurora-400/40"
        >
          <div class="flex flex-wrap items-center justify-between gap-2">
            <span class="text-base font-medium text-neutral-900 transition group-hover:text-aurora-600 dark:text-neutral-100">
              {note.title}
            </span>
            {note.date && (
              <span class="text-xs uppercase tracking-wide text-neutral-400">{note.date}</span>
            )}
          </div>
          {note.excerpt && (
            <p class="mt-1 text-sm text-neutral-600 dark:text-neutral-300">{note.excerpt}</p>
          )}
          {note.folder && (
            <span class="mt-2 text-xs text-neutral-400">{note.folder}</span>
          )}
        </a>
      </li>
    ))}
  </ul>
</section>
